@model PetClinicSystem.Models.Drug

<div class="modal-header">
    <h5 class="modal-title fw-bold">Add New Medicine</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="createDrugForm" method="post" action="@Url.Action("CreateDrug", "BillingPharmacy")">
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="row g-3">

            <!-- DRUG NAME -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Medicine Name</label>
                <input asp-for="DrugName" class="form-control" required placeholder="e.g., Amoxicillin 250mg" />
            </div>

            <!-- DOSAGE TYPE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Dosage Type</label>
                <select asp-for="DosageType" id="dosageTypeCreate" class="form-select" required>
                    <option value="">Select type...</option>
                    <option>Tablet</option>
                    <option>Capsule</option>
                    <option>Liquid</option>
                    <option>Injectable</option>
                    <option>Topical</option>
                    <option>Eye Drops</option>
                    <option>Ear Drops</option>
                    <option>Suspension</option>
                </select>
            </div>

            <!-- CUSTOM DOSAGE INPUT -->
            <div class="col-md-6 d-none" id="customDosageContainer">
                <label class="form-label fw-semibold text-primary">Specify Dosage Type</label>
                <input type="text" id="customDosageInput" class="form-control" placeholder="Enter custom type..." />
            </div>

            <!-- QUANTITY -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Quantity</label>
                <input asp-for="Quantity" type="number" min="0" class="form-control" required />
            </div>

            <!-- MINIMUM STOCK -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Minimum Stock Alert</label>
                <input asp-for="MinimumStock" type="number" min="1" class="form-control" required value="10" />
            </div>

            <!-- UNIT PRICE -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Unit Price</label>
                <div class="input-group">
                    <span class="input-group-text">₱</span>
                    <input asp-for="UnitPrice" type="number" step="0.01" min="0" class="form-control" required />
                </div>
            </div>

            <!-- BASE PRICE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Base Price (Supplier)</label>
                <div class="input-group">
                    <span class="input-group-text">₱</span>
                    <input asp-for="BasePrice" type="number" step="0.01" min="0" class="form-control" />
                </div>
            </div>

            <!-- EXPIRY DATE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Expiration Date</label>
                <input asp-for="ExpiryDate" type="date" class="form-control" required />
            </div>

            <!-- RESTOCK NOTES -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">Restock Notes (optional)</label>
                <textarea asp-for="RestockNotes" class="form-control" rows="2" placeholder="e.g., Fast-moving item, reorder every 2 weeks..."></textarea>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Save Medicine</button>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dropdown = document.getElementById("dosageTypeCreate");
            const customBox = document.getElementById("customDosageContainer");
            const customInput = document.getElementById("customDosageInput");

            dropdown.addEventListener("change", function () {
                if (dropdown.value === "Other") {
                    customBox.classList.remove("d-none");
                    customInput.required = true;
                } else {
                    customBox.classList.add("d-none");
                    customInput.required = false;
                }
            });
        });
    </script>
}
